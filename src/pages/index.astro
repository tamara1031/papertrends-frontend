---
import Layout from '../layouts/Layout.astro';
---

<Layout title="PaperTrends - Academic Research Trend Analysis">
  <main class="min-h-screen bg-arxiv-white dark:bg-arxiv-white transition-colors duration-300">
    <!-- Enhanced Hero Section -->
    <section class="relative py-20 bg-gradient-to-br from-arxiv-white via-arxiv-gray-50 to-arxiv-white dark:from-arxiv-white dark:via-arxiv-gray-50 dark:to-arxiv-white border-b-2 border-arxiv-black dark:border-arxiv-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Left Column: Main Content -->
          <div class="text-left">
            <!-- Enhanced badge with icon -->
            <div class="inline-flex items-center px-4 py-2 bg-arxiv-blue dark:bg-arxiv-blue text-arxiv-white dark:text-arxiv-white text-sm font-medium mb-8 rounded-sm">
              <i class="fas fa-chart-line mr-2"></i>
              Academic Research Trend Analysis Platform
            </div>
            
            <!-- Enhanced title with gradient -->
            <h1 class="text-5xl md:text-7xl font-bold text-arxiv-black dark:text-arxiv-black mb-6 font-sans leading-tight">
              Paper<span class="text-arxiv-blue dark:text-arxiv-blue">Trends</span>
            </h1>
            
            <!-- Enhanced subtitle with more impact -->
            <h2 class="text-2xl md:text-3xl text-arxiv-black dark:text-arxiv-black mb-6 font-sans font-medium">
              Discover the Future of Research
            </h2>
            
            <!-- Enhanced description with specific benefits -->
            <p class="text-xl text-arxiv-black dark:text-arxiv-black mb-8 leading-relaxed">
              Uncover hidden patterns in academic research with our AI-powered visualization platform. 
              Track emerging trends, identify collaboration networks, and predict future research directions 
              across <strong>6 major disciplines</strong> and <strong>100+ subcategories</strong>.
            </p>
            
            <!-- Key statistics -->
            <div class="grid grid-cols-3 gap-6 mb-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-arxiv-blue dark:text-arxiv-blue">2M+</div>
                <div class="text-sm text-arxiv-black dark:text-arxiv-black">Research Papers</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-arxiv-blue dark:text-arxiv-blue">6</div>
                <div class="text-sm text-arxiv-black dark:text-arxiv-black">Major Disciplines</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-arxiv-blue dark:text-arxiv-blue">Real-time</div>
                <div class="text-sm text-arxiv-black dark:text-arxiv-black">Updates</div>
              </div>
            </div>
            
            <!-- Enhanced CTA buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/dashboard" class="inline-flex items-center justify-center px-8 py-4 bg-arxiv-blue dark:bg-arxiv-blue text-arxiv-white dark:text-arxiv-white font-semibold text-lg border-2 border-arxiv-blue dark:border-arxiv-blue hover:bg-arxiv-red dark:hover:bg-arxiv-red hover:border-arxiv-red dark:hover:border-arxiv-red transition-all duration-300 transform hover:scale-105">
                <i class="fas fa-rocket mr-2"></i>
                Start Exploring Now
              </a>
              <a href="/how-it-works" class="inline-flex items-center justify-center px-8 py-4 bg-arxiv-white dark:bg-arxiv-white text-arxiv-black dark:text-arxiv-black font-semibold text-lg border-2 border-arxiv-black dark:border-arxiv-black hover:bg-arxiv-gray-100 dark:hover:bg-arxiv-gray-100 transition-all duration-300">
                <i class="fas fa-play mr-2"></i>
                See How It Works
              </a>
            </div>
          </div>
          
          <!-- Right Column: Visual Preview -->
          <div class="relative">
            <!-- Mock visualization preview -->
            <div class="bg-arxiv-white dark:bg-arxiv-white border-2 border-arxiv-black dark:border-arxiv-black p-6 rounded-sm shadow-lg">
              <div class="text-center mb-4">
                <h3 class="text-lg font-bold text-arxiv-black dark:text-arxiv-black">Interactive Research Trends</h3>
                <p class="text-sm text-arxiv-gray dark:text-arxiv-gray">Live visualization preview</p>
              </div>
              
              <!-- Mock chart area -->
              <div class="h-64 bg-gradient-to-br from-arxiv-blue/10 to-arxiv-red/10 dark:from-arxiv-blue/10 dark:to-arxiv-red/10 rounded-sm border border-arxiv-gray dark:border-arxiv-gray relative overflow-hidden">
                <!-- Animated dots representing data points -->
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="grid grid-cols-3 gap-4">
                    <div class="w-8 h-8 bg-arxiv-blue dark:bg-arxiv-blue rounded-full animate-pulse"></div>
                    <div class="w-6 h-6 bg-arxiv-red dark:bg-arxiv-red rounded-full animate-pulse delay-100"></div>
                    <div class="w-10 h-10 bg-arxiv-gray dark:bg-arxiv-gray rounded-full animate-pulse delay-200"></div>
                  </div>
                </div>
                
                <!-- Trend lines -->
                <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                  <path d="M10,80 Q30,20 50,40 T90,10" stroke="var(--color-arxiv-blue)" stroke-width="2" fill="none" opacity="0.7"/>
                  <path d="M10,60 Q30,40 50,60 T90,30" stroke="var(--color-arxiv-red)" stroke-width="2" fill="none" opacity="0.7"/>
                </svg>
              </div>
              
              <!-- Quick stats -->
              <div class="grid grid-cols-2 gap-4 mt-4">
                <div class="text-center p-2 bg-arxiv-gray-100 dark:bg-arxiv-gray-100 rounded-sm">
                  <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black">AI/ML</div>
                  <div class="text-xs text-arxiv-gray dark:text-arxiv-gray">+23% growth</div>
                </div>
                <div class="text-center p-2 bg-arxiv-gray-100 dark:bg-arxiv-gray-100 rounded-sm">
                  <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black">Quantum</div>
                  <div class="text-xs text-arxiv-gray dark:text-arxiv-gray">+15% growth</div>
                </div>
              </div>
            </div>
            
            <!-- Floating elements for visual interest -->
            <div class="absolute -top-4 -right-4 w-8 h-8 bg-arxiv-red dark:bg-arxiv-red rounded-full animate-bounce"></div>
            <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-arxiv-blue dark:bg-arxiv-blue rounded-full animate-bounce delay-100"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced Features Section -->
    <section class="py-20 bg-arxiv-white dark:bg-arxiv-white border-b-2 border-arxiv-black dark:border-arxiv-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-4xl md:text-5xl font-bold text-arxiv-black dark:text-arxiv-black mb-6 font-sans">
            Why Choose PaperTrends?
          </h2>
          <p class="text-xl text-arxiv-black dark:text-arxiv-black max-w-3xl mx-auto leading-relaxed">
            Powerful tools designed for researchers, academics, and data enthusiasts who want to stay ahead of the curve
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Interactive Visualizations -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-blue dark:bg-arxiv-blue rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-chart-network text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Interactive Visualizations</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Dive deep into research trends with our advanced circle packing and theme river visualizations. 
              <strong>Zoom, filter, and explore</strong> data in real-time with intuitive controls.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Key Benefits:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Dynamic filtering by time, category, keywords</li>
                <li>• Export high-resolution visualizations</li>
                <li>• Customizable color schemes and layouts</li>
              </ul>
            </div>
          </div>
          
          <!-- Real-time Updates -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-red dark:bg-arxiv-red rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-sync-alt text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Real-time Updates</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Never miss a breakthrough! Our system processes <strong>thousands of new papers daily</strong> 
              and updates visualizations automatically. Stay current with the latest research.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Update Frequency:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Daily paper processing from arXiv</li>
                <li>• Weekly trend analysis updates</li>
                <li>• Monthly comprehensive reports</li>
              </ul>
            </div>
          </div>
          
          <!-- Comprehensive Analysis -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-gray dark:bg-arxiv-gray rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-brain text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">AI-Powered Insights</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Uncover hidden patterns and predict future research directions with our <strong>machine learning algorithms</strong>. 
              Identify collaboration networks and emerging topics before they become mainstream.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">AI Capabilities:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Topic modeling and clustering</li>
                <li>• Citation network analysis</li>
                <li>• Trend prediction algorithms</li>
              </ul>
            </div>
          </div>
          
