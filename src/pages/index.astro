---
import Layout from '../layouts/Layout.astro';
---

<Layout title="PaperTrends - Academic Research Trend Analysis">
  <main class="min-h-screen bg-arxiv-white dark:bg-arxiv-white transition-colors duration-300">
    <!-- Enhanced Hero Section -->
    <section class="relative py-20 bg-gradient-to-br from-arxiv-white via-arxiv-gray-50 to-arxiv-white dark:from-arxiv-white dark:via-arxiv-gray-50 dark:to-arxiv-white border-b-2 border-arxiv-black dark:border-arxiv-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Left Column: Main Content -->
          <div class="text-left">
            <!-- Enhanced badge with icon -->
            <div class="inline-flex items-center px-4 py-2 bg-arxiv-blue dark:bg-arxiv-blue text-arxiv-white dark:text-arxiv-white text-sm font-medium mb-8 rounded-sm">
              <i class="fas fa-chart-line mr-2"></i>
              Academic Research Trend Analysis Tool
            </div>
            
            <!-- Enhanced title with gradient -->
            <h1 class="text-5xl md:text-7xl font-bold text-arxiv-black dark:text-arxiv-black mb-6 font-sans leading-tight">
              Paper<span class="text-arxiv-blue dark:text-arxiv-blue">Trends</span>
            </h1>
            
            <!-- Enhanced subtitle with more impact -->
            <h2 class="text-2xl md:text-3xl text-arxiv-black dark:text-arxiv-black mb-6 font-sans font-medium">
              Discover the Future of Research
            </h2>
            
            <!-- Enhanced description with specific benefits -->
            <p class="text-xl text-arxiv-black dark:text-arxiv-black mb-8 leading-relaxed">
              Explore analysis results from academic research data. 
              Discover patterns, trends, and insights across <strong>7 major categories</strong> and <strong>95+ subcategories</strong> 
              based on comprehensive research analysis.
            </p>
            
            <!-- Key statistics -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-arxiv-blue dark:text-arxiv-blue">1.6M</div>
                <div class="text-sm text-arxiv-black dark:text-arxiv-black">Papers Analyzed</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-arxiv-blue dark:text-arxiv-blue">7</div>
                <div class="text-sm text-arxiv-black dark:text-arxiv-black">Major Categories</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-arxiv-blue dark:text-arxiv-blue">95+</div>
                <div class="text-sm text-arxiv-black dark:text-arxiv-black">Subcategories</div>
              </div>
            </div>
            
            <!-- Enhanced CTA buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/dashboard" class="inline-flex items-center justify-center px-8 py-4 bg-arxiv-blue dark:bg-arxiv-blue text-arxiv-white dark:text-arxiv-white font-semibold text-lg border-2 border-arxiv-blue dark:border-arxiv-blue hover:bg-arxiv-red dark:hover:bg-arxiv-red hover:border-arxiv-red dark:hover:border-arxiv-red transition-all duration-300 transform hover:scale-105">
                <i class="fas fa-chart-line mr-2"></i>
                Explore Research Data
              </a>
              <a href="/how-it-works" class="inline-flex items-center justify-center px-8 py-4 bg-arxiv-white dark:bg-arxiv-white text-arxiv-black dark:text-arxiv-black font-semibold text-lg border-2 border-arxiv-black dark:border-arxiv-black hover:bg-arxiv-gray-100 dark:hover:bg-arxiv-gray-100 transition-all duration-300">
                <i class="fas fa-info-circle mr-2"></i>
                Learn More
              </a>
            </div>
          </div>
          
          <!-- Right Column: Visual Preview -->
          <div class="relative">
            <!-- Mock visualization preview -->
            <div class="bg-arxiv-white dark:bg-arxiv-white border-2 border-arxiv-black dark:border-arxiv-black p-6 rounded-sm shadow-lg">
              <div class="text-center mb-4">
                <h3 class="text-lg font-bold text-arxiv-black dark:text-arxiv-black">Research Trend Overview</h3>
                <p class="text-sm text-arxiv-gray dark:text-arxiv-gray">Data visualization examples</p>
              </div>
              
              <!-- Mock chart area -->
              <div class="h-64 bg-gradient-to-br from-arxiv-blue/10 to-arxiv-red/10 dark:from-arxiv-blue/10 dark:to-arxiv-red/10 rounded-sm border border-arxiv-gray dark:border-arxiv-gray relative overflow-hidden">
                <!-- Animated dots representing data points -->
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="grid grid-cols-3 gap-4">
                    <div class="w-8 h-8 bg-arxiv-blue dark:bg-arxiv-blue rounded-full animate-pulse"></div>
                    <div class="w-6 h-6 bg-arxiv-red dark:bg-arxiv-red rounded-full animate-pulse delay-100"></div>
                    <div class="w-10 h-10 bg-arxiv-gray dark:bg-arxiv-gray rounded-full animate-pulse delay-200"></div>
                  </div>
                </div>
                
                <!-- Trend lines -->
                <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                  <path d="M10,80 Q30,20 50,40 T90,10" stroke="var(--color-arxiv-blue)" stroke-width="2" fill="none" opacity="0.7"/>
                  <path d="M10,60 Q30,40 50,60 T90,30" stroke="var(--color-arxiv-red)" stroke-width="2" fill="none" opacity="0.7"/>
                </svg>
              </div>
              
              <!-- Quick stats -->
              <div class="grid grid-cols-2 gap-4 mt-4">
                <div class="text-center p-2 bg-arxiv-gray-100 dark:bg-arxiv-gray-100 rounded-sm">
                  <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black">AI/ML</div>
                  <div class="text-xs text-arxiv-gray dark:text-arxiv-gray">+23% growth</div>
                </div>
                <div class="text-center p-2 bg-arxiv-gray-100 dark:bg-arxiv-gray-100 rounded-sm">
                  <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black">Quantum</div>
                  <div class="text-xs text-arxiv-gray dark:text-arxiv-gray">+15% growth</div>
                </div>
              </div>
            </div>
            
            <!-- Floating elements for visual interest -->
            <div class="absolute -top-4 -right-4 w-8 h-8 bg-arxiv-red dark:bg-arxiv-red rounded-full animate-bounce"></div>
            <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-arxiv-blue dark:bg-arxiv-blue rounded-full animate-bounce delay-100"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced Features Section -->
    <section class="py-20 bg-arxiv-white dark:bg-arxiv-white border-b-2 border-arxiv-black dark:border-arxiv-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-4xl md:text-5xl font-bold text-arxiv-black dark:text-arxiv-black mb-6 font-sans">
            What You Can Explore
          </h2>
          <p class="text-xl text-arxiv-black dark:text-arxiv-black max-w-3xl mx-auto leading-relaxed">
            Comprehensive research data and visualizations designed for researchers, academics, and data enthusiasts
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Research Visualizations -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-blue dark:bg-arxiv-blue rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-chart-network text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Research Visualizations</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Explore research trends through comprehensive circle packing and theme river visualizations. 
              <strong>Browse and analyze</strong> data patterns across different research domains.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Available Data:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Historical trend analysis</li>
                <li>• Category-based visualizations</li>
                <li>• Research pattern insights</li>
              </ul>
            </div>
          </div>
          
          <!-- Comprehensive Coverage -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-red dark:bg-arxiv-red rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-globe text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Comprehensive Coverage</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Explore analysis results from <strong>1.6M papers</strong> across 7 major disciplines. 
              Discover trends in Computer Science, Mathematics, Physics, Biology, Economics, Statistics, and Engineering.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Coverage Details:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• 7 major research categories</li>
                <li>• 95+ detailed subcategories</li>
                <li>• Multi-year historical data</li>
              </ul>
            </div>
          </div>
          
          <!-- Research Insights -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-gray dark:bg-arxiv-gray rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-search text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Research Insights</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Discover patterns and trends in academic research. Analyze <strong>research evolution</strong>, 
              identify emerging topics, and understand the landscape of academic knowledge.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Insight Types:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Topic trend analysis</li>
                <li>• Research pattern identification</li>
                <li>• Academic landscape overview</li>
              </ul>
            </div>
          </div>
          
          <!-- Data Exploration -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-blue dark:bg-arxiv-blue rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-filter text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Data Exploration</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Navigate through research data with intuitive filtering options. 
              <strong>Browse by category, time period, and keywords</strong> to find relevant research trends.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Exploration Options:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Category and subcategory filtering</li>
                <li>• Time-based trend analysis</li>
                <li>• Keyword-based search</li>
              </ul>
            </div>
          </div>
          
          <!-- Research Categories -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-red dark:bg-arxiv-red rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-book text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Research Categories</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Explore detailed information about research categories and subcategories. 
              Understand the <strong>scope and structure</strong> of academic research domains.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Category Information:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• Detailed category descriptions</li>
                <li>• Subcategory breakdowns</li>
                <li>• Research domain overviews</li>
              </ul>
            </div>
          </div>
          
          <!-- Educational Resources -->
          <div class="border-2 border-arxiv-black dark:border-arxiv-black p-8 bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-arxiv-gray dark:bg-arxiv-gray rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-graduation-cap text-2xl text-arxiv-white dark:text-arxiv-white"></i>
              </div>
              <h3 class="text-2xl font-bold text-arxiv-black dark:text-arxiv-black mb-4 font-sans">Educational Resources</h3>
            </div>
            <p class="text-arxiv-black dark:text-arxiv-black leading-relaxed mb-6">
              Learn how to interpret research trends and understand academic landscapes. 
              Access <strong>educational content</strong> about research analysis and visualization.
            </p>
            <div class="bg-arxiv-gray-100 dark:bg-arxiv-gray-100 p-3 rounded-sm">
              <div class="text-sm font-semibold text-arxiv-black dark:text-arxiv-black mb-1">Learning Materials:</div>
              <ul class="text-sm text-arxiv-black dark:text-arxiv-black space-y-1">
                <li>• How to read visualizations</li>
                <li>• Understanding research trends</li>
                <li>• Academic landscape guides</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Simplified Categories Section -->
    <section class="py-16 bg-arxiv-white dark:bg-arxiv-white border-b-2 border-arxiv-black dark:border-arxiv-black">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-arxiv-black dark:text-arxiv-black mb-6 font-sans">
            Research Categories
          </h2>
          <p class="text-lg text-arxiv-black dark:text-arxiv-black max-w-2xl mx-auto">
            Based on <a href="https://arxiv.org/category_taxonomy" target="_blank" class="inline-flex items-center text-arxiv-blue dark:text-arxiv-blue hover:text-arxiv-red dark:hover:text-arxiv-red font-medium transition-colors duration-300 group">
              <span class="underline underline-offset-4 decoration-2 decoration-arxiv-blue/30 group-hover:decoration-arxiv-red/50 transition-all duration-300">arXiv's category taxonomy</span>
              <i class="fas fa-external-link-alt ml-1 text-xs opacity-70 group-hover:opacity-100 transition-opacity duration-300"></i>
            </a>
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          <div class="group text-center p-6 border-2 border-arxiv-black dark:border-arxiv-black bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">💻</div>
            <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black group-hover:text-arxiv-blue dark:group-hover:text-arxiv-blue transition-colors duration-300">Computer Science</div>
          </div>
          <div class="group text-center p-6 border-2 border-arxiv-black dark:border-arxiv-black bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">📐</div>
            <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black group-hover:text-arxiv-blue dark:group-hover:text-arxiv-blue transition-colors duration-300">Mathematics</div>
          </div>
          <div class="group text-center p-6 border-2 border-arxiv-black dark:border-arxiv-black bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">⚛️</div>
            <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black group-hover:text-arxiv-blue dark:group-hover:text-arxiv-blue transition-colors duration-300">Physics</div>
          </div>
          <div class="group text-center p-6 border-2 border-arxiv-black dark:border-arxiv-black bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">🧬</div>
            <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black group-hover:text-arxiv-blue dark:group-hover:text-arxiv-blue transition-colors duration-300">Biology</div>
          </div>
          <div class="group text-center p-6 border-2 border-arxiv-black dark:border-arxiv-black bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">📊</div>
            <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black group-hover:text-arxiv-blue dark:group-hover:text-arxiv-blue transition-colors duration-300">Economics</div>
          </div>
          <div class="group text-center p-6 border-2 border-arxiv-black dark:border-arxiv-black bg-arxiv-white dark:bg-arxiv-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">📈</div>
            <div class="text-sm font-bold text-arxiv-black dark:text-arxiv-black group-hover:text-arxiv-blue dark:group-hover:text-arxiv-blue transition-colors duration-300">Statistics</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Simplified CTA Section -->
    <section class="py-16 bg-arxiv-black dark:bg-arxiv-black border-b-2 border-arxiv-black dark:border-arxiv-black">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-arxiv-white dark:text-arxiv-white mb-6 font-sans">
          Ready to Explore Research Trends?
        </h2>
        
        <p class="text-lg text-arxiv-white dark:text-arxiv-white mb-8 max-w-2xl mx-auto leading-relaxed">
          Discover patterns and insights in academic research across multiple domains.
        </p>
        
        <!-- Simplified CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/dashboard" class="inline-flex items-center justify-center px-8 py-4 bg-arxiv-blue dark:bg-arxiv-blue text-arxiv-white dark:text-arxiv-white font-semibold text-lg border-2 border-arxiv-blue dark:border-arxiv-blue hover:bg-arxiv-red dark:hover:bg-arxiv-red hover:border-arxiv-red dark:hover:border-arxiv-red transition-all duration-300">
            <i class="fas fa-chart-line mr-2"></i>
            Explore Research Data
          </a>
          <a href="/how-it-works" class="inline-flex items-center justify-center px-8 py-4 bg-arxiv-white dark:bg-arxiv-white text-arxiv-black dark:text-arxiv-black font-semibold text-lg border-2 border-arxiv-white dark:border-arxiv-white hover:bg-arxiv-gray-100 dark:hover:bg-arxiv-gray-100 transition-all duration-300">
            <i class="fas fa-info-circle mr-2"></i>
            Learn More
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  .dark .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
  }
</style>