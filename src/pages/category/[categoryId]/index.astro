---
import Layout from '../../../layouts/Layout.astro';
import { arxivCategories } from '../../../lib/data';
import { getCategoryEmoji, getCategoryGradient } from '../../../lib/utils';

export async function getStaticPaths() {
  return arxivCategories.map(category => ({
    params: { categoryId: category.id },
    props: { category }
  }));
}

const { category } = Astro.props;
const categoryId = Astro.params.categoryId;
---

<Layout title={`${category.name} Research Trends`} canonical={`/category/${categoryId}`}>
  <main class="min-h-screen bg-white dark:bg-gray-900">
    <!-- arXiv-style Header Section -->
    <section class="section">
      <div class="section-container">
        <div class="text-center">
          <!-- arXiv-style title -->
          <h1 class="heading-primary">
            {category.name} Research Trends
          </h1>
          
          <!-- arXiv-style subtitle -->
          <h2 class="text-xl text-gray-700 dark:text-gray-300 mb-6 font-normal">
            Analysis of research trends in {category.name.toLowerCase()} domain
          </h2>
          
          <!-- arXiv-style description -->
          <p class="text-body mb-8 max-w-3xl mx-auto">
            This page provides comprehensive analysis of research trends in the {category.name.toLowerCase()} domain based on data from 
            <a href="https://arxiv.org" class="link-primary">arXiv.org</a>. 
            Explore patterns and insights across {category.subcategoryGroups.length} research areas and {category.subcategoryGroups.reduce((total, group) => total + group.subcategories.length, 0)}+ subcategories.
          </p>
          
          <!-- Category emoji display -->
          <div class="mb-8">
            <div class={`w-20 h-20 ${getCategoryGradient(categoryId)} rounded-2xl flex items-center justify-center mx-auto`}>
              <span class="text-3xl">{getCategoryEmoji(categoryId)}</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- arXiv-style Research Areas Section -->
    <section class="section">
      <div class="section-container">
        <h2 class="heading-secondary text-center">
          Research Areas
        </h2>
        <p class="text-center text-meta mb-8">
          Select a specific research area to explore detailed trend analysis
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {category.subcategoryGroups.map(group => (
            <div class="card-elevated p-6">
              <div class="flex items-center space-x-3 mb-4">
                <span class="text-2xl">{group.emoji}</span>
                <h3 class="heading-tertiary">
                  {group.name}
                </h3>
              </div>
              <div class="space-y-2">
                {group.subcategories.map(subcategory => (
                  <a 
                    href={`/category/${categoryId}/${subcategory.id}`}
                    class="block p-3 rounded-lg bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors group"
                  >
                    <div class="flex items-center space-x-3">
                      <span class="text-lg">{subcategory.emoji}</span>
                      <div>
                        <h4 class="font-medium text-gray-800 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                          {subcategory.name}
                        </h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                          {subcategory.id}
                        </p>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- arXiv-style Research Overview Section -->
    <section class="section">
      <div class="section-container">
        <h2 class="heading-secondary text-center">
          Research Overview
        </h2>
        <p class="text-center text-meta mb-8 max-w-2xl mx-auto">
          Get insights into the research landscape and emerging trends in {category.name.toLowerCase()}
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="card-elevated p-6 text-center">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-chart-line text-blue-600 dark:text-blue-400 text-2xl"></i>
            </div>
            <h3 class="heading-tertiary mb-2">
              Trend Analysis
            </h3>
            <p class="text-body">
              Track the evolution of research topics over time and identify emerging areas of interest.
            </p>
          </div>
          
          <div class="card-elevated p-6 text-center">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-network-wired text-green-600 dark:text-green-400 text-2xl"></i>
            </div>
            <h3 class="heading-tertiary mb-2">
              Topic Relationships
            </h3>
            <p class="text-body">
              Discover connections between different research areas and understand topic correlations.
            </p>
          </div>
          
          <div class="card-elevated p-6 text-center">
            <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-search text-purple-600 dark:text-purple-400 text-2xl"></i>
            </div>
            <h3 class="heading-tertiary mb-2">
              Keyword Insights
            </h3>
            <p class="text-body">
              Explore key terms and concepts that define each research area and their frequency patterns.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- arXiv-style CTA Section -->
    <section class="section-last">
      <div class="section-container text-center">
        <h2 class="heading-secondary">
          Ready to Explore {category.name} Trends?
        </h2>
        
        <p class="text-body mb-8 max-w-2xl mx-auto">
          Choose a research area above to start your analysis journey and discover insights in {category.name.toLowerCase()} research.
        </p>
        
        <!-- arXiv-style navigation -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`/category/${categoryId}/${category.subcategoryGroups[0].subcategories[0].id}`} class="btn-primary">
            Start Analysis
          </a>
          <a href="/dashboard" class="btn-outline">
            Explore All Trends
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
