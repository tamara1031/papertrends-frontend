---
import Layout from '../../../layouts/Layout.astro';
import { arxivCategories } from '../../../lib/data';
import { getCategoryEmoji, getCategoryGradient } from '../../../lib/utils';

export async function getStaticPaths() {
  return arxivCategories.map(category => ({
    params: { categoryId: category.id },
    props: { category }
  }));
}

const { category } = Astro.props;
const categoryId = Astro.params.categoryId;
---

<Layout title={`${category.name} Research Trends`} canonical={`/category/${categoryId}`}>
  <main class="min-h-screen bg-arxiv-white dark:bg-arxiv-white">
    <!-- Hero Section -->
    <section class="relative py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class={`w-20 h-20 ${getCategoryGradient(categoryId)} rounded-2xl flex items-center justify-center mx-auto mb-6`}>
            <span class="text-3xl">{getCategoryEmoji(categoryId)}</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            {category.name} Research Trends
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
            Explore the latest research trends and discover insights in {category.name.toLowerCase()} through interactive data visualizations.
          </p>
        </div>
      </div>
    </section>

    <!-- Subcategories Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            Research Areas
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Select a specific research area to explore detailed trend analysis
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {category.subcategoryGroups.map(group => (
            <div class="bg-white dark:bg-gray-900 rounded-xl p-6 shadow-xs border border-gray-200 dark:border-gray-700">
              <div class="flex items-center space-x-3 mb-4">
                <span class="text-2xl">{group.emoji}</span>
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">
                  {group.name}
                </h3>
              </div>
              <div class="space-y-2">
                {group.subcategories.map(subcategory => (
                  <a 
                    href={`/category/${categoryId}/${subcategory.id}`}
                    class="block p-3 rounded-lg bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors group"
                  >
                    <div class="flex items-center space-x-3">
                      <span class="text-lg">{subcategory.emoji}</span>
                      <div>
                        <h4 class="font-medium text-gray-800 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                          {subcategory.name}
                        </h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                          {subcategory.id}
                        </p>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Overview Section -->
    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            Research Overview
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Get insights into the research landscape and emerging trends in {category.name.toLowerCase()}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-chart-line text-blue-600 dark:text-blue-400 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Trend Analysis
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Track the evolution of research topics over time and identify emerging areas of interest.
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-network-wired text-green-600 dark:text-green-400 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Topic Relationships
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Discover connections between different research areas and understand topic correlations.
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-search text-purple-600 dark:text-purple-400 text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              Keyword Insights
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Explore key terms and concepts that define each research area and their frequency patterns.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Ready to Explore {category.name} Trends?
        </h2>
        <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
          Choose a research area above to start your analysis journey
        </p>
        <a href={`/category/${categoryId}/${category.subcategoryGroups[0].subcategories[0].id}`} class="inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors">
          <i class="fas fa-rocket mr-2"></i>
          Start Analysis
        </a>
      </div>
    </section>
  </main>
</Layout>
