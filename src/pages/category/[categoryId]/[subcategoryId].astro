---
import Layout from '../../../layouts/Layout.astro';
import { BubbleChart, StackAreaChart } from '../../../components/charts';
import { arxivCategories } from '../../../lib/data';
import { getCategoryEmoji, getCategoryGradient } from '../../../lib/utils';

export async function getStaticPaths() {
  const paths: Array<{ params: { categoryId: string; subcategoryId: string }; props: any }> = [];
  
  arxivCategories.forEach(category => {
    category.subcategoryGroups.forEach(group => {
      group.subcategories.forEach(subcategory => {
        paths.push({
          params: { 
            categoryId: category.id, 
            subcategoryId: subcategory.id 
          },
          props: { 
            category, 
            subcategory,
            group
          }
        });
      });
    });
  });
  
  return paths;
}

const { category, subcategory, group } = Astro.props;
const categoryId = Astro.params.categoryId;
const subcategoryId = Astro.params.subcategoryId;

// Mock data for demonstration - in a real implementation, this would come from your data source
const mockTopicData = [
  { id: 'topic1', name: 'Machine Learning', count: 150, keywords: [['neural networks', 45], ['deep learning', 38], ['algorithms', 32]] },
  { id: 'topic2', name: 'Computer Vision', count: 120, keywords: [['image processing', 42], ['object detection', 35], ['recognition', 28]] },
  { id: 'topic3', name: 'Natural Language', count: 95, keywords: [['language models', 40], ['text analysis', 33], ['nlp', 25]] },
  { id: 'topic4', name: 'Robotics', count: 80, keywords: [['autonomous systems', 35], ['control', 28], ['navigation', 22]] },
  { id: 'topic5', name: 'Data Science', count: 110, keywords: [['statistics', 38], ['visualization', 30], ['analytics', 25]] },
];

const mockAnalysisData = {
  topics: {
    data: {
      topic1: { name: 'Machine Learning', keywords: [['neural networks', 45], ['deep learning', 38]], count: 150 },
      topic2: { name: 'Computer Vision', keywords: [['image processing', 42], ['object detection', 35]], count: 120 },
      topic3: { name: 'Natural Language', keywords: [['language models', 40], ['text analysis', 33]], count: 95 },
      topic4: { name: 'Robotics', keywords: [['autonomous systems', 35], ['control', 28]], count: 80 },
      topic5: { name: 'Data Science', keywords: [['statistics', 38], ['visualization', 30]], count: 110 },
    },
    correlations: [[1, 0.8, 0.6, 0.4, 0.7], [0.8, 1, 0.5, 0.3, 0.6], [0.6, 0.5, 1, 0.2, 0.8], [0.4, 0.3, 0.2, 1, 0.3], [0.7, 0.6, 0.8, 0.3, 1]],
    series: {
      '2020': [10, 8, 6, 4, 7],
      '2021': [15, 12, 9, 6, 10],
      '2022': [20, 16, 12, 8, 13],
      '2023': [25, 20, 15, 10, 16],
      '2024': [30, 24, 18, 12, 19],
    },
    papers: {}
  },
  metadata: {
    categoryId,
    subcategoryId,
    lastUpdated: '2024-01-01',
    dataVersion: '1.0.0',
    period: { start: '2020-01-01', end: '2024-12-31' }
  }
};
---

<Layout title={`${subcategory.name} - ${category.name} Research Trends`} canonical={`/category/${categoryId}/${subcategoryId}`}>
  <main class="min-h-screen bg-arxiv-white dark:bg-arxiv-white">
    <!-- Hero Section -->
    <section class="relative py-12 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-900 dark:to-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center space-x-4 mb-6">
          <a href={`/category/${categoryId}`} class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-100 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to {category.name}
          </a>
        </div>
        
        <div class="text-center">
          <div class="flex items-center justify-center space-x-4 mb-6">
            <div class={`w-16 h-16 ${getCategoryGradient(categoryId)} rounded-2xl flex items-center justify-center`}>
              <span class="text-2xl">{getCategoryEmoji(categoryId)}</span>
            </div>
            <div class={`w-12 h-12 bg-white dark:bg-gray-800 rounded-xl flex items-center justify-center shadow-xs`}>
              <span class="text-xl">{subcategory.emoji}</span>
            </div>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            {subcategory.name}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-6">
            Research trend analysis for {subcategory.name} in {category.name.toLowerCase()}
          </p>
          <div class="inline-flex items-center px-4 py-2 bg-white dark:bg-gray-800 rounded-lg shadow-xs">
            <span class="text-sm text-gray-600 dark:text-gray-400 mr-2">Category:</span>
            <span class="text-sm font-medium text-gray-800 dark:text-gray-100">{subcategory.id}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Visualization Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            Research Topic Analysis
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Explore the main research topics and their relationships in {subcategory.name}
          </p>
        </div>
        
        <!-- Chart Controls -->
        <div class="flex justify-center mb-8">
          <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-1">
            <button class="px-4 py-2 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-100 rounded-md shadow-xs font-medium">
              Circle Packing
            </button>
            <button class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-100 transition-colors">
              Theme River
            </button>
          </div>
        </div>
        
        <!-- Chart Container -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8 mb-8">
          <div class="h-96 w-full">
            <BubbleChart 
              data={mockTopicData} 
              client:load 
            />
          </div>
        </div>
        
        <!-- Chart Info -->
        <div class="text-center">
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            Click on any topic to explore its details and related research papers
          </p>
        </div>
      </div>
    </section>

    <!-- Topic Details Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            Research Topics
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Key research areas and their characteristics
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {mockTopicData.map((topic, index) => (
            <div class="bg-white dark:bg-gray-900 rounded-xl p-6 shadow-xs border border-gray-200 dark:border-gray-700">
              <div class="flex items-center space-x-3 mb-4">
                <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                  <span class="text-blue-600 dark:text-blue-400 font-semibold">{index + 1}</span>
                </div>
                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">
                  {topic.name}
                </h3>
              </div>
              <div class="space-y-2">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Papers:</span>
                  <span class="text-sm font-medium text-gray-800 dark:text-gray-100">{topic.count}</span>
                </div>
                <div class="space-y-1">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Top Keywords:</span>
                  <div class="flex flex-wrap gap-1">
                    {topic.keywords.slice(0, 3).map(([keyword, count]) => (
                      <span class="px-2 py-1 bg-gray-100 dark:bg-gray-800 text-xs rounded-md text-gray-700 dark:text-gray-300">
                        {keyword}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Temporal Analysis Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-gray-100 mb-4">
            Temporal Trend Analysis
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
            Track how research topics evolve over time in {subcategory.name}
          </p>
        </div>
        
        <!-- Theme River Chart -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8">
          <div class="h-96 w-full">
            <StackAreaChart 
              data={mockAnalysisData} 
              client:load 
            />
          </div>
        </div>
        
        <div class="text-center mt-6">
          <p class="text-gray-600 dark:text-gray-400 text-sm">
            This visualization shows the relative popularity of different research topics over time
          </p>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row justify-between items-center">
          <a href={`/category/${categoryId}`} class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100 font-medium rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors mb-4 sm:mb-0">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to {category.name}
          </a>
          <a href="/" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
            <i class="fas fa-home mr-2"></i>
            Home
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
