---
import type { DashboardStats } from '../../types/dashboard';

export interface Props {
  stats: DashboardStats;
}

const { stats } = Astro.props;
const dotColorClass = `bg-${stats.color}-500`;
---

<div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-3 min-w-[100px] h-[70px] flex flex-col justify-between">
  <div class="flex items-center space-x-2">
    <div class={`w-2 h-2 ${dotColorClass} rounded-full`}></div>
    <span class="text-xs text-gray-600 dark:text-gray-400 font-medium">{stats.label}</span>
  </div>
  <div class="text-lg font-semibold text-gray-900 dark:text-white">
    {stats.value}
  </div>
  {stats.subtitle && (
    <div class="text-xs text-gray-500 dark:text-gray-400">
      {stats.subtitle}
    </div>
  )}
</div>
