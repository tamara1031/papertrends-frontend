---
import type { DashboardStats } from '../../types/dashboard';
import '../../styles/components.css';

export interface Props {
  stats: DashboardStats;
}

const { stats } = Astro.props;

// arXiv-inspired color mapping for better academic aesthetic
const getColorStyle = (color: string): string => {
  const colorMap: Record<string, string> = {
    red: '#cc0000',
    orange: '#ff6600', 
    yellow: '#ffaa00',
    green: '#006600',
    blue: '#0000ee',
    purple: '#6600cc',
    gray: '#666666'
  };
  return colorMap[color] || '#666666';
};
---

<div class="stat-card">
  <div class="flex items-center justify-between">
    <!-- Icon Box -->
    <div class="stat-icon-box" style={`background-color: ${getColorStyle(stats.color)};`}>
      {stats.icon}
    </div>
    
    <!-- Content -->
    <div class="stat-content">
      <div class="stat-value">
        {stats.value}
      </div>
      <div class="stat-label">
        {stats.label}
      </div>
    </div>
    
    <!-- Badge -->
    {stats.subtitle && (
      <div class="stat-badge">
        {stats.subtitle}
      </div>
    )}
  </div>
</div>
