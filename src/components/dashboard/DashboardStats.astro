---
// Dashboard Statistics Component
export interface Props {
  stats: {
    totalPapers: number;
    totalCategories: number;
    totalSubcategories: number;
    lastUpdated: string;
  };
}

const { stats } = Astro.props;
---

<div class="space-y-4">
  <div class="flex items-center justify-between py-3 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
        <span class="text-blue-600 dark:text-blue-400 font-semibold text-sm">📄</span>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">Total Papers</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400">Research papers analyzed</p>
      </div>
    </div>
    <div class="text-lg font-bold text-gray-900 dark:text-gray-100">
      {stats.totalPapers.toLocaleString()}+
    </div>
  </div>
  
  <div class="flex items-center justify-between py-3 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
        <span class="text-green-600 dark:text-green-400 font-semibold text-sm">📚</span>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">Categories</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400">Major research domains</p>
      </div>
    </div>
    <div class="text-lg font-bold text-gray-900 dark:text-gray-100">
      {stats.totalCategories}
    </div>
  </div>
  
  <div class="flex items-center justify-between py-3 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
        <span class="text-purple-600 dark:text-purple-400 font-semibold text-sm">🏷️</span>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">Subcategories</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400">Detailed research areas</p>
      </div>
    </div>
    <div class="text-lg font-bold text-gray-900 dark:text-gray-100">
      {stats.totalSubcategories}+
    </div>
  </div>
  
  <div class="flex items-center justify-between py-3">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-orange-100 dark:bg-orange-900 rounded-lg flex items-center justify-center">
        <span class="text-orange-600 dark:text-orange-400 font-semibold text-sm">📅</span>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">Analysis Period</h3>
        <p class="text-xs text-gray-500 dark:text-gray-400">Years of research data</p>
      </div>
    </div>
    <div class="text-lg font-bold text-gray-900 dark:text-gray-100">
      2020-2024
    </div>
  </div>
</div>
