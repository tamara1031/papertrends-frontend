---
// Footer component
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
            <i class="fas fa-chart-line text-white text-sm"></i>
          </div>
          <span class="text-xl font-bold text-gray-900 dark:text-white">PaperTrends</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-sm max-w-md">
          An open-source platform for visualizing academic research trends and discovering insights across research domains.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          Quick Links
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors">
              Home
            </a>
          </li>
          <li>
            <a href="/how-it-works" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors">
              How it Works
            </a>
          </li>
          <li>
            <a href="/acknowledgments" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors">
              Acknowledgments
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Resources -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
          Resources
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="https://github.com/papertrends" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors">
              GitHub
            </a>
          </li>
          <li>
            <a href="https://arxiv.org" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors">
              arXiv
            </a>
          </li>
          <li>
            <a href="https://astro.build" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white text-sm transition-colors">
              Astro
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          © 2024 PaperTrends. All rights reserved.
        </p>
        <p class="text-gray-500 dark:text-gray-400 text-sm mt-2 md:mt-0">
          Built with <span class="text-red-500">♥</span> using Astro
        </p>
      </div>
    </div>
  </div>
</footer>
